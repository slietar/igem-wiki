                  li: a(href="#").header-item
                    .header-item-icon
                      include ../../internal-assets/icons/solid/book.svg
                    .header-item-title Description
                    .header-item-desc Description of our project, background, etc.

                  li: a(href="#").header-item
                    .header-item-icon
                      include ../../internal-assets/icons/solid/book-open.svg
                    .header-item-title Protocols
                    .header-item-desc PCR, Western Blot protocols, etc.

                  li: a(href="#").header-item
                    .header-item-icon
                      include ../../internal-assets/icons/solid/server.svg
